<resources>
    <declare-styleable name="SmoothCheckBox">
        <attr name="duration" format="integer" />
        <attr name="stroke_width" format="dimension" />
        <attr name="color_tick" format="color" />
        <attr name="color_checked" format="color" />
        <attr name="color_unchecked" format="color" />
        <attr name="color_unchecked_stroke" format="color" />
        <attr name="checked" format="boolean" />
    </declare-styleable>
    <!--the shared elements-->

    <declare-styleable name="FABRevealMenu">
        <attr name="menuBackgroundColor" format="color" />
        <attr name="menuCustomView" format="reference" />
        <attr name="menuRes" format="reference" />
        <attr name="menuDirection" format="enum">
            <enum name="left" value="0" />
            <enum name="up" value="1" />
            <enum name="right" value="2" />
            <enum name="down" value="3" />
        </attr>
        <attr name="showOverlay" format="boolean" />
        <attr name="overlayBackground" format="color" />

        <attr name="showTitle" format="boolean" />
        <attr name="showIcon" format="boolean" />
        <attr name="menuTitleTextColor" format="color" />
        <attr name="menuTitleDisabledTextColor" format="color" />
        <attr name="animateItems" format="boolean" />
        <attr name="menuSize" format="enum">
            <enum name="normal" value="0" />
            <enum name="small" value="1" />
        </attr>

        <attr name="menuTitleFontFamily" format="reference" />
    </declare-styleable>
    <declare-styleable name="NavigationTabBar">
        <attr name="ntb_titled" format="boolean" />
        <attr name="ntb_badged" format="boolean" />
        <attr name="ntb_scaled" format="boolean" />
        <attr name="ntb_tinted" format="boolean" />
        <attr name="ntb_swiped" format="boolean" />
        <attr name="ntb_badge_use_typeface" format="boolean" />

        <attr name="ntb_title_size" format="dimension" />
        <attr name="ntb_title_mode" format="enum">
            <enum name="all" value="0" />
            <enum name="active" value="1" />
        </attr>

        <attr name="ntb_badge_size" format="dimension" />
        <attr name="ntb_badge_position" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="ntb_badge_gravity" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="ntb_badge_bg_color" format="color" />
        <attr name="ntb_badge_title_color" format="color" />

        <attr name="ntb_typeface" format="string" />
        <attr name="ntb_corners_radius" format="dimension" />
        <attr name="ntb_icon_size_fraction" format="float" />
        <attr name="ntb_animation_duration" format="integer" />

        <attr name="ntb_inactive_color" format="color" />
        <attr name="ntb_active_color" format="color" />
        <attr name="ntb_bg_color" format="color" />

        <attr name="ntb_preview_colors" format="reference" />
    </declare-styleable>
    <declare-styleable name="ExpandableLayout">
        <attr name="el_duration" format="integer" />
        <attr name="el_expanded" format="boolean" />
        <attr name="el_parallax" format="float" />
        <attr name="android:orientation" />
    </declare-styleable>

    <declare-styleable name="EasyTabsAttrs">

        <!--STYLE-->

        <attr name="etab_selected_color" format="color" />
        <attr name="etab_unselected_color" format="color" />
        <attr name="etab_bold_for_selected" format="boolean" />

        <!--INDICATOR-->

        <attr name="etab_indicator_color" format="color" />
        <attr name="etab_indicator_width" format="dimension" />
        <attr name="etab_indicator_size" format="enum">
            <enum name="text" value="0" />
            <enum name="image" value="0" />
            <enum name="value" value="1" />
            <enum name="match_parent" value="2" />
        </attr>
        <attr name="etab_indicators" format="boolean" />

        <!--SEP-->

        <attr name="etab_separators" format="boolean" />
        <attr name="etab_separator_color" format="color" />


    </declare-styleable>
</resources>
